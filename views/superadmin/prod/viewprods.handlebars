        <td>{{this.name}}</td>
        <td>{{this.coder}}</td>
        <td>{{this.catid.name}}</td>
        <td>{{this.subcatid.name}}</td>
        <td>{{this.prix}}</td>
        <td>{{this.ordd}}</td>

        <td>
       {{#ifBoth this.img.thumbnail this.img.large}}
