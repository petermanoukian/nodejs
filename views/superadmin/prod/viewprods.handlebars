            <a href="/uploads/{{this.filer}}" target="_blank" class="text-decoration-none">File</a>
        {{else}}
           
        {{/if}}
        </td>



        <td>
          <a href="/superadmin/prod/create/{{this.catid._id}}/{{this.subcatid._id}}" class="btn btn-sm btn-outline-secondary me-1">
            Add Product
          </a>
